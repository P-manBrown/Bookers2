<main>
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--User Info-->
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 63, 63, format: 'jpeg', fallback: "no_image2.jpeg" %>
      <!--<img class="attachment user profile_image fallback" src="/assets/no_image-72379a4da21cb04a58337cf92d85bc39f8d534cbc78254c2085acaca82236bfa.jpg">-->
      <table class="table">
        <tbody>
          <tr>
    	      <th>name</th>
    	      <th><%= @user.name %></th>
          </tr>
          <tr>
    	      <th>introduction</th>
    	      <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      
          <div class="row">
           <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>
           <!--<a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_40507" href="/users/40507/edit"></a>-->
          </div>


<!--投稿フォーム-->
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
          <!--<input class="form-control book_title" type="text" name="book[title]" id="book_title">-->
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
          <!--<textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>-->
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
          <!--<input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">-->
        </div>
      <% end %>
    </div>


<!--User一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpeg" %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", user_path(user.id) %>
                <!--<a class="user_40678" href="/users/40678">Show</a>-->
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>