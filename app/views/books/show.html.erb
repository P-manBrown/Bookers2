<div class="container">
  <div class="row">

      <!--UserInfo-->
      <%= render 'shared/userinfo', user: @user %>
      
      <!--投稿フォーム-->
      <%= render '/shared/newbook', book: @book_new %>

      <!--投稿詳細-->
      <div class="col-md-8 offset-md-1">
  	  	<h2>Book detail</h2>
  		    <table class="table">
  		    <tbody>
  		      <tr>
              <td>
                <%= link_to(user_path(@user.id)) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpeg" %>
                <% end %>
                <br>
                <%= link_to(user_path(@user.id)) do %>
                  <%= @user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to(book_path(@book_find.id)) do %>
                  <%= @book_find.title %>
                <% end %>
              </td>
              <td>
                <%= @book_find.body %>
              </td>
              <% if @user.id == current_user.id %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book_find.id), class: "btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@book_find.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>